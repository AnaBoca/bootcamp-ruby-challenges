<!DOCTYPE html>
<html>
  <head>
    <title>Quizone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="row">
      <div class="col-10 text-center p-3">
        <%= link_to root_path, class: 'text-decoration' do %>
          <%= image_tag 'logo.png', class: 'logo d-inline mr-2' %>
        <% end %>
        <h1 class="d-inline align-middle">Have a Compliment!</h1>
      </div>
      <div class="col-md-2 text-center links">
        <!-- Button trigger modal -->
        <%= link_to 'Add a Compliment', '#', data: {toggle: 'modal', target: '#myModal'} %>
      </div>

      </header>
      
      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
              </button>
              <h4 class="modal-title" id="myModalLabel">Add a Compliment</h4>
            </div>
            <%= simple_form_for Compliment.new do |f| %>
              <div class="modal-body">
                <%= f.input :compliment, label: "Make someone's day.", placeholder: "You are an incredible human being!" %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <%= f.submit 'Create', class: 'btn btn-danger' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    <hr />
    <br class="clear" />

    <div class="container mb-5">
      <% if flash[:error].present? %>
        <div class="col-10 offset-1 alert alert-danger">
          <%= flash[:error].html_safe %>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 text-right initialism">
            Compliments generously provided by <a href="https://anaboca.netlify.com/" target="_blank">Ana Boca</a>.
          </div>
        </div>
      </div>
    </div>

  </body>
</html>
